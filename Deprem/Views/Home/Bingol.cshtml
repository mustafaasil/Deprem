@model List<Deprem>


<table class="table table-striped" id="my-table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Şehir</th>
            <th scope="col">Şiddet</th>
            <th scope="col">Tarih</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < ViewBag.IlBingol.Count; i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td>@ViewBag.IlBingol[i]</td>

                @{
                    if (ViewBag.SiddetBingol[i] >= 3.0m && ViewBag.SiddetBingol[i] < 4.0m)
                    {
                        <td class="bg-warning">@ViewBag.SiddetBingol[i]</td>
                    }
                    else if (ViewBag.SiddetBingol[i] >= 4.0m)
                    {

                        <td class="bg-danger">@ViewBag.SiddetBingol[i]</td>
                    }
                    else
                    {
                        <td>@ViewBag.SiddetBingol[i]</td>

                    }
                }
                
                <td>@ViewBag.TarihBingol[i]</td>
            </tr>
        }
    </tbody>
</table>

